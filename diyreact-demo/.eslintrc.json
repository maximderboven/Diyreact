{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "node": false
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "root": true,
    "extends": [
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "rules": {
        "comma-dangle": [ "error", "never" ],
        "indent": [ "error", 4, { "SwitchCase": 1 } ],
        "linebreak-style": [ "error", "unix" ],
        "no-console": "off",
        "no-trailing-spaces": "error",
        "no-undef": "error",
        "quotes": [ "error", "single" ],
        "semi": [ "error", "never" ]
    },
    "overrides": [
        {
            "files": [ "webpack.config.js" ],
            "env": {
                "browser": false,
                "node": true
            },
            "rules": {
                "global-require": [ "off" ]
            }
        },
        {
            "files": ["jest.config.js"],
            "env": {
                "browser": false,
                "node": true
            },
            "rules": {
                "global-require": [ "off" ],
                "no-undef": [ "off" ]
            }
        }
    ]
}
